def Ngram(s,n):
    list = []

    for i in range(0,len(s)-1):
        for j in range(0,n-1):
            s[i] += s[i+j]
        list.append(s[i])
           
    return list


def main():
    s = str(input("文字を入力してください:"))
    n = int(input("何文字で分割しますか:"))

    ws = s.split()
    print(Ngram(ws,n))

    ls = s.replace(' ','')
    print(Ngram(ls,n))

if __name__ == '__main__':
	main()
